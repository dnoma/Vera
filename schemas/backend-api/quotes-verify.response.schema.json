{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "backend-api/quotes-verify.response",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "matches", "matchScore", "notes"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["exact", "partial", "not_found", "error"]
    },
    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["paraId", "text", "score"],
        "properties": {
          "paraId": { "type": "string", "minLength": 1 },
          "text": { "type": "string", "minLength": 1 },
          "score": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    },
    "matchScore": { "type": "number", "minimum": 0, "maximum": 1 },
    "notes": { "type": "array", "items": { "type": "string" } }
  }
}

